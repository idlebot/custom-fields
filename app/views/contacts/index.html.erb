<h1 align='center'>Contacts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th class='col-md-5'>Name</th>
      <th class='col-md-5'>E-mail</th>
      <th class='col-md-2'></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>

      <tr>
        <th scope="row" class='col-md-5'><%= contact.name %></th>
        <td  class='col-md-5'><%= contact.email %></td>
        <td class='col-md-2'>
          <%= link_to 'Edit',
          edit_contact_path(contact),
          class: "btn btn-md btn-primary" %>
          <%= link_to 'Delete',
          contact_path(contact),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this contact?"},
          class: "btn btn-md btn-danger" %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
<div class="row center action-buttons">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to 'New contact', new_contact_path, class: "btn btn-md btn-primary" %>
    </div>
</div>
