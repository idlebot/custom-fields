<%= render 'shared/errors', obj: @contact %>

<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@contact, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>

    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= form.label :name %>
      </div>
      <div class='col-sm-8'>
        <%= form.text_field :name, class: 'form-control', placeholder: 'Contact name', autofocus: true %>
      </div>
    </div>

    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= form.label :email %>
      </div>
      <div class='col-sm-8'>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Contact email' %>
      </div>
    </div>

    <%= form.fields_for :custom_field_values do |builder| %>
    <%= render 'custom_field', :f => builder %>
    <% end %>

    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>

    <% end %>

    <div class='col-xs-4 col-xs-offset-4'>
      [
      <%= link_to 'Cancel and return to contacts list', contacts_path %>
      ]
    </div>

  </div>
</div>
