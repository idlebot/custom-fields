<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>

    <%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |form| %>

    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= form.label :name %>
      </div>
      <div class='col-sm-8'>
        <%= form.text_field :name, class: 'form-control', placeholder: 'Enter name' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= form.label :email %>
      </div>
      <div class='col-sm-8'>
        <%= form.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='control-label col-sm-2'>
        <%= form.label :password %>
      </div>
      <div class='col-sm-8'>
        <%= form.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
      </div>
    </div>

    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= form.submit(@user.new_record? ? 'Create account' : 'Update account', class: 'btn btn-primary btn-lg') %>
      </div>
    </div>

    <% end %>

    <div class='col-xs-4 col-xs-offset-4'>
      [
      <%= link_to 'Cancel and go back to home page', root_path %>
      ]
    </div>

  </div>
</div>
