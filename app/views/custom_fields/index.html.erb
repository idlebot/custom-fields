<h1 align='center'>Contacts Custom Fields</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th class='col-md-5'>Field Name</th>
      <th class='col-md-5'>Field Type</th>
      <th class='col-md-2'></th>
    </tr>
  </thead>
  <tbody>
    <% @custom_fields.each do |custom_field| %>

      <tr>
        <th scope="row" class='col-md-5'><%= custom_field.field_name %></th>
        <td  class='col-md-5'><%= custom_field.type_description %></td>
        <td class='col-md-2'>
          <%= link_to 'Edit',
          edit_custom_field_path(custom_field),
          class: "btn btn-md btn-primary" %>
          <%= link_to 'Delete',
          custom_field_path(custom_field),
          method: :delete,
          data: { confirm: "Are you sure you want to delete this custom field? All contacts that contain values for this field will also be affected."},
          class: "btn btn-md btn-danger" %>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
<div class="row center action-buttons">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to 'New Custom Field', new_custom_field_path, class: "btn btn-md btn-primary" %>
    </div>
</div>
